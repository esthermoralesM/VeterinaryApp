<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CrearLesFaqs" >

    <data>
        <variable
            name="faqs"
            type="cat.copernic.veterinaryapp.modelos.FAQS" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <Button
            android:id="@+id/butonGuardarBtnnn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_personalizado"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:text="Guardar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/resposta"
            app:layout_constraintTop_toBottomOf="@+id/resposta"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/pregunta"
            android:layout_width="353dp"
            android:layout_height="79dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/campo_personalizado"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Pregunta"
            android:inputType="textMultiLine"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/resposta"
            android:layout_width="353dp"
            android:layout_height="169dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/campo_personalizado"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Resosta"
            android:inputType="textMultiLine"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="@+id/pregunta"
            app:layout_constraintTop_toBottomOf="@+id/pregunta" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


